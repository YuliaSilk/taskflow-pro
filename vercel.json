{
    "version": 2,
    "builds": [
      {
        "src": "src/index.tsx",
        "use": "@vercel/static-build"
      },
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/index.ts"
      },
      {
        "source": "/(.*)",
        "destination": "/src/index.tsx"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }